<Window x:Class="WpfApp1.CreateTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CreateTaskWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Описание:"/>
            <TextBox x:Name="descriptionTextBox" Margin="0 5"/>
            <TextBlock Text="Срочность:" Margin="0 10 0 5"/>
            <ComboBox x:Name="urgencyComboBox" Margin="0 0 0 10">
                <ComboBoxItem Content="Срочно"/>
                <ComboBoxItem Content="Несрочно"/>
            </ComboBox>
            <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
